{
    "compilerOptions": {
      "target": "ES2015",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": ["ES2015"],
      "skipLibCheck": true,
  
      /* Bundler mode */
      "moduleResolution": "bundler",
      "isolatedModules": true,
      "moduleDetection": "force",
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
  
      "outDir": "./lib",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts"],
  }
  